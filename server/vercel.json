{
  "installCommand": "npm install --legacy-peer-deps",
  "version": 2,
  "builds": [
    {
      "src": "public/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/public/server.js" },
    { "src": "/static/(.*)", "dest": "/src/$1" },
    { "src": "/(.*)", "dest": "/public/server.js" }
  ]
}
